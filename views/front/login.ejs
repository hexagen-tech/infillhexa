<style>
@import url("https://fonts.googleapis.com/css?family=Quattrocento+Sans&display=swap");
body {
  margin: 0;
  font-family: "Quattrocento Sans";
  overflow: hidden;
}

h2 {
  font-weight: bolder;
}

#auth {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: row;
}
#auth.sign-up #slider {
  left: 50vw;
}
#auth form {
  flex: 0 0 50%;
  padding: 10vh 10vw;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #f2f2f7;
}
#auth form label {
  margin-bottom: 5px;
}
#auth form button,
#auth form input {
  padding: 10px;
  margin-bottom: 15px;
  border-radius: 5px;
  font-size: 1.25rem;
  outline: none;
}
#auth form input {
  border: 1px solid #b5b5b5;
  transition: 125ms ease;
}
#auth form input:focus {
  border-color: blue;
  box-shadow: 0 0 0 2pt rgba(0, 0, 255, 0.3);
}
#auth form button {
  color: white;
  border: none;
  margin-top: 20px;
  background: rgba(0, 0, 255, 0.7);
  box-shadow: 0 3px 15px 5px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  font-family: "Quattrocento Sans";
  transition: 75ms ease;
}
#auth form button:active {
  background: blue;
  transform: scale(0.95);
}

#slider {
  color: white;
  position: absolute;
  top: 0;
  left: 0;
  width: 50vw;
  height: 100vh;
  background-image: url(https://images.unsplash.com/photo-1533299346856-b1a85808f2ec?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1489&q=80);
  background-attachment: fixed;
  background-size: 100vw;
  transition: left 300ms ease;
  clip-path: inset(0);
}
#slider:before {
  content: "";
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background-color: blue;
  opacity: 0.5;
  
}
#slider div {
  color: white;
  position: fixed;
  height: 100%;
  width: 50vw;
  padding: 50px;
  top: 0;
  z-index: 100;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
#slider #login-text {
  left: 0;
}
#slider #sign-up-text {
  left: 50vw;
}

.toggle {
  text-align: center;
  color: #757575;
}
.toggle span {
  color: blue;
  cursor: pointer;
}
